<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_chating_myhead_iv"
        android:layout_width="@dimen/lv_head_show_size"
        android:layout_height="@dimen/lv_head_show_size"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_chating_mycontent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_chating_myhead_iv"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/item_chating_yourhead_iv"
        android:layout_width="@dimen/lv_head_show_size"
        android:layout_height="@dimen/lv_head_show_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_chating_yourcontent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/item_chating_yourhead_iv" />

</RelativeLayout>