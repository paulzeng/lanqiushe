<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lv_item_comm_root" >

    <ImageView
        android:id="@+id/item_notify_head_iv"
        style="@style/lv_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_notify_head_iv"
        android:orientation="vertical" >

        <TextView
            android:text="title"
            android:id="@+id/item_notify_title_tv"
            style="@style/name" />

        <TextView
             android:text="content"
            android:id="@+id/item_notify_content_tv"
            style="@style/money" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_notify_status_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
          
            android:gravity="center_horizontal"
           
            android:textSize="12sp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="60dp"
                android:gravity="center_horizontal"
            android:id="@+id/item_notify_date_tv"
            style="@style/distance" />
    </LinearLayout>

</RelativeLayout>