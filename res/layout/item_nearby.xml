<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lv_item_comm_root" >

    <ImageView
        android:id="@+id/item_nearby_head_iv"
        style="@style/lv_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_nearby_head_iv"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_nearby_name_tv"
                style="@style/name" />

            <TextView
                android:id="@+id/item_nearby_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#929497"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_nearby_money_tv"
            style="@style/money"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_nearby_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#929497"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/distance" />

            <TextView
                android:id="@+id/item_nearby_distance_tv"
                style="@style/distance" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>