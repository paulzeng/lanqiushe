<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/layout_title"/>

    <RelativeLayout
        style="@style/bt_base_ll"
        android:layout_marginLeft="@dimen/ui_padding"
        android:layout_marginRight="@dimen/ui_padding"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp" >

        <EditText
            android:layout_marginRight="65dp"
            android:id="@+id/register_input_pwd_et"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/please_input_your_pwd" />

        <RelativeLayout
            android:id="@+id/register_input_pwd_lock_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/lock_bg_nor" >

            <ImageView
                 android:id="@+id/register_input_pwd_lock_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/lock" />
        </RelativeLayout>
    </RelativeLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
</LinearLayout>
